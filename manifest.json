{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "version": "1.1.1",
  "action": {
    "default_title": "__MSG_appName__",
    "default_popup": "pages/popup/popup.html",
    "default_icon": {
      "16": "icons/logo.png",
      "48": "icons/logo.png",
      "128": "icons/logo.png"
    }
  },
  "icons": {
    "16": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "options_page": "pages/manager/manager.html",
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://studio.youtube.com/*"
  ],
  "permissions": ["storage"],
  "background": {
    "service_worker": "js/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://studio.youtube.com/*"],
      "js": [
        "js/shared/config.js",
        "js/shared/utils.js",
        "js/shared/locales.js",
        "js/shared/i18n.js",
        "js/content/ui.js",
        "js/content/data_bridge.js",
        "js/content/scanner.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}