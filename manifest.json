{
   "manifest_version": 3,
   "name": "YT 暱稱還原助手",
   "version": "1.0.9",
   "description": "將 YouTube 聊天室與留言區的帳戶代稱(@ID)自動替換為暱稱(頻道顯示名稱)。採用本地背景爬蟲技術，不傳輸資料至第三方伺服器。",
   "action": {
      "default_title": "YT 暱稱還原助手",
      "default_popup": "pages/popup/popup.html",
      "default_icon": {
         "16": "icons/logo.png",
         "48": "icons/logo.png",
         "128": "icons/logo.png"
      }
   },
   "icons": {
      "16": "icons/logo.png",
      "48": "icons/logo.png",
      "128": "icons/logo.png"
   },
   "options_page": "pages/manager/manager.html",
   "host_permissions": [
      "https://www.youtube.com/*",
      "https://studio.youtube.com/*"
   ],
   "permissions": [
      "storage"
   ],
   "background": {
      "service_worker": "js/background/background.js"
   },
   "content_scripts": [
      {
         "matches": [
            "https://www.youtube.com/*",
            "https://studio.youtube.com/*"
         ],
         "js": [
            "js/shared/config.js",       
            "js/shared/utils.js",        
            "js/content/ui.js",          
            "js/content/data_bridge.js", 
            "js/content/scanner.js"
         ],
         "run_at": "document_idle",
         "all_frames": true
      }
   ]
}